<form class="form-horizontal">
  <h2>Job scheduling and pausing over nigth</h2>
  <div class="controls">
    <label class="checkbox">
    <input type="checkbox" data-bind="checked: settings.plugins.jobscheduler.pluginenabled"/>
    Enable</label>
  </div>

  <h3>Settings</h3>
  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
      <input type="checkbox" data-bind="checked: settings.plugins.jobscheduler.startenabled"/>
      Enable scheduled print job</label>
    </div>

    <label class="control-label"><i class="fa fa-play"></i></label>
    <div class="controls">
      <input type="text" class="input-block-level" data-bind="value: settings.plugins.jobscheduler.starttime"/>
    </div>
  </div>

  <h3>Specify day working time (pause on night)</h3>
  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
      <input type="checkbox" data-bind="checked: settings.plugins.jobscheduler.pauseenabled"/>
      Enable pause over night</label>
    </div>

    <label class="control-label"><i class="fa fa-sun-o"></i></label>
    <div class="controls">
      <input type="text" class="input-block-level" data-bind="value: settings.plugins.jobscheduler.pauseday">
    </div>

    <label class="control-label"><i class="fa fa-moon-o"></i></label>
    <div class="controls">
      <input type="text" class="input-block-level" data-bind="value: settings.plugins.jobscheduler.pausenight">
    </div>
  </div>

  <h3><i class="fa fa-telegram"></i> Telegram messages</h3>
  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
      <input type="checkbox" data-bind="checked: settings.plugins.jobscheduler.telegramenabled"/>
      Enable telegram messaging</label>
    </div>

    <label class="control-label"><i class="fa fa-key"></i></label>
    <div class="controls">
      <input type="text" class="input-block-level" data-bind="value: settings.plugins.jobscheduler.telegramtoken">
    </div>

    <label class="control-label"><i class="fa fa-user-o"></i></label>
    <div class="controls">
      <input type="text" class="input-block-level" data-bind="value: settings.plugins.jobscheduler.telegramchatid">
    </div>
  </div>

</form>
