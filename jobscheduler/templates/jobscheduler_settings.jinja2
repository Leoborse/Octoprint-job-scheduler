<form class="form-horizontal">

  <h3>Job scheduling and pausing over night</h3>

  <h4>Settings</h4>
  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
      <input type="checkbox" data-bind="checked: settings.plugins.jobscheduler.startenabled"/>
      Enable scheduled print job</label>
    </div>

    <label class="control-label"><i class="fa fa-play"></i></label>
    <div class="controls">
      <input type="text" class="input-block-level" data-bind="value: settings.plugins.jobscheduler.starttime"/>
    </div>
  </div>

  <h4>
    <label class="checkbox">
    <input type="checkbox" data-bind="checked: settings.plugins.jobscheduler.pauseenabled"/>
    Specify day working time (pause on night)</label>
  </h4>
  <div class="row-fluid">
    <div class="span1"><i class="fa fa-sun-o fa-2x right"></i></div>
    <div class="span3">
      <input type="text" data-bind="value: settings.plugins.jobscheduler.pauseday">
    </div>
    <div class="offset2 span1"><i class="fa fa-moon-o fa-2x right"></i></div>
    <div class="span3">
      <input type="text" data-bind="value: settings.plugins.jobscheduler.pausenight">
    </div>
  </div>


  <h4><i class="fa fa-telegram"></i> Telegram messages</h4>
  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
      <input type="checkbox" data-bind="checked: settings.plugins.jobscheduler.telegramenabled"/>
      Enable telegram messaging</label>
    </div>

    <label class="control-label"><i class="fa fa-key"></i></label>
    <div class="controls">
      <input type="text" class="input-block-level" data-bind="value: settings.plugins.jobscheduler.telegramtoken">
    </div>

    <label class="control-label"><i class="fa fa-user-o"></i></label>
    <div class="controls">
      <input type="text" class="input-block-level" data-bind="value: settings.plugins.jobscheduler.telegramchatid">
    </div>
  </div>

</form>
